<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">
<!-- <Ui xmlns="http://www.blizzard.com/wow/ui/"> !-->
<Script file="ArpHint.lua"/> 
<Frame name="ArpHint_Frame" hidden="true" movable="true" enableMouse="true" enableKeyboard="true" parent="UIParent">
    <Size>
      <AbsDimension x="100" y="50" />
    </Size>

    <Anchors>
      <Anchor point="CENTER" relativeTo="UIParent">
        <Offset>
          <AbsDimension x="0" y="0" />
        </Offset>
      </Anchor>
    </Anchors>

    <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" tile="true">
      <BackgroundInsets>
        <AbsInset left="11" right="12" top="12" bottom="11" />
      </BackgroundInsets>
      <TileSize>
        <AbsValue val="32" />
      </TileSize>
      <EdgeSize>
        <AbsValue val="32" />
      </EdgeSize>
    </Backdrop>

    <Frames>

      <Frame name="ArpHint_Value">
        <Size>
          <AbsDimension x="100" y="40" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="16" y="-6" />
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer>
            <FontString name="$parentLabel" inherits="GameFontNormal" text="???????" justifyH="LEFT">
              <Anchors>
                <Anchor point="TOPLEFT" />
                <Anchor point="BOTTOMRIGHT" />
              </Anchors>
              <FontHeight>
                <AbsValue val="10" />
              </FontHeight>
              <Color r="1" g="0.8196079" b="0" />
              <Shadow>
                <Color r="0" g="0" b="0" />
                <Offset>
                  <AbsDimension x="1" y="-1" />
                </Offset>
              </Shadow>
            </FontString>
          </Layer>
        </Layers>
      </Frame>
    </Frames>
	

    <Scripts>
      <OnLoad>
		this:RegisterForDrag("LeftButton");
		ArpHint_OnLoad()
      </OnLoad>
	  <OnEvent>
		ArpHint_OnEvent(self, event, ...)
	  </OnEvent>
      <OnDragStart>
        this:StartMoving();
        this.isMoving = true;
      </OnDragStart>
      <OnDragStop>
        this:StopMovingOrSizing();
        this.isMoving = false;
      </OnDragStop>
    </Scripts>
  </Frame>
</Ui>